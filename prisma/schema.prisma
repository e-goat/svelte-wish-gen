datasource db {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "../src/lib/db"
}

model Card {
  id          Int @id @default(autoincrement())
  template    Template @relation(fields: [templateId], references: [id])
  templateId  Int
  title       String
  description String
  sender      String?
  receiver    String?
  slug        String   @unique
  createdAt   DateTime @default(now())
}

model Template {
  id         Int @id @default(autoincrement())
  cards      Card[]
  title      String
  type       String
  background String
  font       String @default("Arial")
  createdAt  DateTime @default(now())
}
